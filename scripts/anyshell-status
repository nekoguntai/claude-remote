#!/usr/bin/env bash
#
# status - Show status of Anyshell services
#

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
BOLD='\033[1m'
NC='\033[0m'

# Ensure Homebrew is in PATH on macOS (may not be set in non-interactive shells)
if [[ "$OSTYPE" == "darwin"* ]]; then
    if ! command -v brew &>/dev/null; then
        if [[ -f "/opt/homebrew/bin/brew" ]]; then
            eval "$(/opt/homebrew/bin/brew shellenv)"
        elif [[ -f "/usr/local/bin/brew" ]]; then
            eval "$(/usr/local/bin/brew shellenv)"
        fi
    fi
fi

# Ensure ~/.local/bin is in PATH
if [[ -d "${HOME}/.local/bin" ]] && [[ ":$PATH:" != *":${HOME}/.local/bin:"* ]]; then
    export PATH="${HOME}/.local/bin:${PATH}"
fi

# macOS: Tailscale CLI is inside the app bundle, not in PATH
TAILSCALE_CMD="tailscale"
if [[ "$OSTYPE" == "darwin"* ]] && ! command -v tailscale &>/dev/null; then
    if [[ -x "/Applications/Tailscale.app/Contents/MacOS/Tailscale" ]]; then
        TAILSCALE_CMD="/Applications/Tailscale.app/Contents/MacOS/Tailscale"
    fi
fi

echo -e "${BOLD}${BLUE}═══════════════════════════════════════════════════════════${NC}"
echo -e "${BOLD}${BLUE}                    Anyshell Status                     ${NC}"
echo -e "${BOLD}${BLUE}═══════════════════════════════════════════════════════════${NC}"
echo ""

# Check tmux sessions
echo -e "${BOLD}${CYAN}tmux Sessions${NC}"
echo -e "${CYAN}─────────────────────────────────────────────────────────────${NC}"
if tmux list-sessions 2>/dev/null; then
    echo ""
else
    echo -e "  ${YELLOW}No active sessions${NC}"
    echo ""
fi

# Check mosh server
echo -e "${BOLD}${CYAN}Mosh Server${NC}"
echo -e "${CYAN}─────────────────────────────────────────────────────────────${NC}"
if command -v mosh-server &> /dev/null; then
    echo -e "  Status: ${GREEN}Installed${NC}"
    echo -e "  Version: $(mosh-server --version 2>&1 | head -1)"

    # Check for active mosh connections
    MOSH_PROCS=$(pgrep -c mosh-server 2>/dev/null || echo "0")
    echo -e "  Active connections: ${MOSH_PROCS}"
else
    echo -e "  Status: ${RED}Not installed${NC}"
fi
echo ""

# Check ttyd / web terminal
echo -e "${BOLD}${CYAN}Web Terminal (ttyd)${NC}"
echo -e "${CYAN}─────────────────────────────────────────────────────────────${NC}"
if command -v ttyd &> /dev/null || [[ -x "${HOME}/.local/bin/ttyd" ]]; then
    echo -e "  Status: ${GREEN}Installed${NC}"

    # Check if service is running
    if [[ "$OSTYPE" == "darwin"* ]]; then
        # macOS
        if launchctl list 2>/dev/null | grep -q "com.anyshell.web"; then
            echo -e "  Service: ${GREEN}Running${NC}"
        else
            echo -e "  Service: ${YELLOW}Not running${NC}"
        fi
    else
        # Linux
        if systemctl --user is-active anyshell-web.service &>/dev/null; then
            echo -e "  Service: ${GREEN}Running${NC}"
        else
            echo -e "  Service: ${YELLOW}Not running${NC}"
        fi
    fi

    # Check credentials
    CRED_FILE="${HOME}/.config/anyshell/web-credentials"
    if [[ -f "$CRED_FILE" ]]; then
        echo -e "  Auth: ${GREEN}Configured${NC} (user: claude)"
    else
        echo -e "  Auth: ${RED}Not configured${NC}"
    fi
else
    echo -e "  Status: ${RED}Not installed${NC}"
fi
echo ""

# Check Tailscale
echo -e "${BOLD}${CYAN}Tailscale${NC}"
echo -e "${CYAN}─────────────────────────────────────────────────────────────${NC}"
if command -v tailscale &>/dev/null || [[ -x "$TAILSCALE_CMD" ]]; then
    echo -e "  Status: ${GREEN}Installed${NC}"

    # Get Tailscale status
    if $TAILSCALE_CMD status &>/dev/null; then
        TS_STATUS=$($TAILSCALE_CMD status --json 2>/dev/null)
        # Use jq if available, fallback to grep
        if command -v jq &>/dev/null; then
            TS_IP=$(echo "$TS_STATUS" | jq -r '.TailscaleIPs[0] // empty' 2>/dev/null)
            TS_HOSTNAME=$(echo "$TS_STATUS" | jq -r '.Self.DNSName // empty' 2>/dev/null | sed 's/\.$//')
        else
            # Fallback: compact JSON and grep
            TS_IP=$(echo "$TS_STATUS" | tr -d '\n ' | grep -oE '"TailscaleIPs":\["[0-9.]+"' | grep -oE '[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+' | head -1)
            TS_HOSTNAME=$(echo "$TS_STATUS" | tr -d '\n ' | grep -oE '"DNSName":"[^"]*"' | head -1 | cut -d'"' -f4 | sed 's/\.$//')
        fi

        if [ -n "$TS_IP" ]; then
            echo -e "  Connected: ${GREEN}Yes${NC}"
            echo -e "  IP: ${TS_IP}"
            echo -e "  Hostname: ${TS_HOSTNAME}"

            # Check Serve status (not Funnel)
            SERVE_STATUS=$($TAILSCALE_CMD serve status 2>/dev/null || echo "")
            if echo "$SERVE_STATUS" | grep -q "7681"; then
                echo -e "  Serve: ${GREEN}Active${NC} (Tailnet-only)"
                echo -e "  Web URL: ${BOLD}https://${TS_HOSTNAME}:7681${NC}"
            else
                echo -e "  Serve: ${YELLOW}Not configured${NC}"
            fi
        else
            echo -e "  Connected: ${RED}No${NC}"
            echo ""
            echo -e "  ${YELLOW}To connect:${NC}"
            echo -e "    1. Click Tailscale icon in menu bar"
            echo -e "    2. Click 'Log in' or 'Connect'"
            echo -e "    3. Complete auth in browser"
        fi
    else
        echo -e "  Connected: ${RED}No${NC}"
        echo ""
        echo -e "  ${YELLOW}To connect:${NC}"
        if [[ "$OSTYPE" == "darwin"* ]]; then
            echo -e "    1. Click Tailscale icon in menu bar"
            echo -e "    2. Click 'Log in' or 'Connect'"
            echo -e "    3. Complete auth in browser"
        else
            echo -e "    Run: sudo tailscale up"
        fi
    fi
else
    echo -e "  Status: ${YELLOW}Not installed${NC}"
fi
echo ""

# Connection instructions
echo -e "${BOLD}${CYAN}Connection Instructions${NC}"
echo -e "${CYAN}─────────────────────────────────────────────────────────────${NC}"
HOSTNAME=$(hostname)
USER=$(whoami)

echo -e "  ${BOLD}Mosh (recommended):${NC}"
echo -e "    mosh ${USER}@${HOSTNAME} -- anyshell"
echo ""
echo -e "  ${BOLD}SSH:${NC}"
echo -e "    ssh ${USER}@${HOSTNAME} -t 'anyshell'"
echo ""

if command -v tailscale &>/dev/null || [[ -x "$TAILSCALE_CMD" ]]; then
  if $TAILSCALE_CMD status &>/dev/null; then
    if command -v jq &>/dev/null; then
        TS_HOSTNAME=$($TAILSCALE_CMD status --json 2>/dev/null | jq -r '.Self.DNSName // empty' | sed 's/\.$//')
    else
        TS_HOSTNAME=$($TAILSCALE_CMD status --json 2>/dev/null | tr -d '\n ' | grep -oE '"DNSName":"[^"]*"' | head -1 | cut -d'"' -f4 | sed 's/\.$//')
    fi
    if [ -n "$TS_HOSTNAME" ]; then
        echo -e "  ${BOLD}Web Browser (requires Tailscale on client):${NC}"
        echo -e "    https://${TS_HOSTNAME}:7681"
        echo -e "    Username: claude"
        echo -e "    Password: cat ~/.config/anyshell/web-credentials"
        echo ""
    fi
  fi
fi

echo -e "${BOLD}${BLUE}═══════════════════════════════════════════════════════════${NC}"
