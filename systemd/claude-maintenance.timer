[Unit]
Description=Weekly Claude Remote Maintenance
Documentation=https://github.com/nekoguntai/claude-remote

[Timer]
# Run weekly on Sunday at 3:00 AM
OnCalendar=Sun *-*-* 03:00:00
# Randomize start time by up to 1 hour to avoid thundering herd
RandomizedDelaySec=3600
# Run immediately if missed (e.g., system was off)
Persistent=true

[Install]
WantedBy=timers.target
